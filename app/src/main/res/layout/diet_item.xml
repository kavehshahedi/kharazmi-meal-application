<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5sp"
    app:cardCornerRadius="2sp"
    android:padding="2sp"
    android:layout_margin="10sp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dietDayNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/isbold"
            android:text="شنبه"
            android:maxLines="1"
            android:textColor="#212121"
            android:textSize="20sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="16sp"
            app:autoSizeStepGranularity="1sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dietPopupBreakfastTextView"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/isbold"
            android:maxLines="1"
            android:text="صبحانه"
            android:textColor="#212121"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="1sp"
            android:lines="1"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dietDayNameTextView" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dietPopupBreakfastValueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/isbold"
            android:lineSpacingMultiplier="1.4"
            android:text="1. سوسیس تخم مرغ با نوشابه\n2. عدسی با بربری"
            android:textAlignment="viewEnd"
            android:textColor="#212121"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="1sp"
            app:layout_constraintEnd_toStartOf="@+id/dietPopupBreakfastTextView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dietDayNameTextView" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dietPopupLunchTextView"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/isbold"
            android:maxLines="1"
            android:text="نهار"
            android:textColor="#212121"
            android:textSize="16sp"
            android:lines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="1sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dietPopupBreakfastValueTextView" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dietPopupLunchValueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/isbold"
            android:lineSpacingMultiplier="1.4"
            android:text="1. شیشلیک با دوغ \n2. کوکوسبزی با زرشک"
            android:textAlignment="viewEnd"
            android:textColor="#212121"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="1sp"
            app:layout_constraintEnd_toStartOf="@+id/dietPopupLunchTextView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dietPopupBreakfastValueTextView" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dietPopupDinnerTextView"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/isbold"
            android:maxLines="1"
            android:text="شام"
            app:autoSizeTextType="uniform"
            android:lines="1"
            android:textColor="#212121"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="1sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dietPopupLunchValueTextView" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dietPopupDinnerValueTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/isbold"
            android:lineSpacingMultiplier="1.4"
            android:text="1. ماکارونی زیاد\n2. نون پنیر کم"
            android:textAlignment="viewEnd"
            android:textColor="#212121"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="1sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dietPopupDinnerTextView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dietPopupLunchValueTextView"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>